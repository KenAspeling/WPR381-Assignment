<%- include('../partials/header.ejs', {title: 'Events'}) %>

<section class="events-section">
    <h2>Community Events</h2>
    <p>Discover upcoming events, activities, and gatherings in our community.</p>
    
    <div class="events-grid">
        <% events.forEach(event => { %>
            <div class="event-card">
                <div class="event-image">
                    <img src="<%= event.image %>" alt="<%= event.title %>" onerror="this.src='/images/placeholder.jpg'; this.onerror='';">
                </div>
                <div class="event-details">
                    <h3><%= event.title %></h3>
                    <p class="event-date"><strong>Date:</strong> <%= new Date(event.date).toLocaleDateString() %></p>
                    <p class="event-location"><strong>Location:</strong> <%= event.location %></p>
                    <p><%= event.description %></p>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<%- include('../partials/footer.ejs') %>